<%= form_with scope: :flower, url: wedding_recipe_flower_path(@wedding, @recipe, @flower), local: true, method: :patch do |form| %>
  <p>
    <%= form.label :quantity %>:
    <%= form.text_field :quantity %>

    <%= form.submit class: "btn btn-secondary btn-sm"%>
    <%= link_to wedding_recipe_flower_path(@wedding, @recipe, @flower), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button role="button" href="" class="btn btn-secondary btn-sm btn-icon">
        <i class="fas fa-trash"></i>
      </button>
    <% end %>
  </p>
<% end %>

<span>Flower Price: </span>$<%= @flower.flower_price %>
