<%= form_with scope: :recipe, url: wedding_recipe_path(@wedding, @recipe), local: true, method: :patch do |form| %>

  <p>
    <%= form.label :recipe_name, class: "col-sm-3" %>
    <%= form.text_field :recipe_name, class: "col-sm-5 form-box" %>
  </p>

  <p>
    <%= form.label :recipe_quantity, class: "col-sm-3" %>
    <%= form.text_field :recipe_quantity, class: "col-sm-5 form-box" %>
  </p>

  <p class="row">
    <%= form.label :notes, class: "col-sm-3" %>
    <%= form.text_area :notes, size: "20x5", class: "col-sm-5 form-box" %>
  </p>

  <p>
    <%= form.submit class: "btn btn-secondary btn-sm", id: "recipe-save-btn" %>
    <%= link_to wedding_recipe_path(@wedding, @recipe), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button role="button" href="" class="btn btn-sm btn-secondary btn-icon">
        <i class="fas fa-trash"></i>
      </button>
    <% end %>
  </p>
<% end %>
