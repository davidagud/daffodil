<%= form_with scope: :recipe, url: wedding_recipe_path(@wedding, @recipe), local: true, method: :patch do |form| %>

  <p>
    <%= form.label :recipe_name %></br>
    <%= form.text_field :recipe_name %>
  </p>

  <p>
    <%= form.label :recipe_quantity %></br>
    <%= form.text_field :recipe_quantity %>
  </p>

  <p>
    <%= form.label :notes %></br>
    <%= form.text_area :notes %>
  </p>

  <p>
    <%= form.submit %>
    <%= link_to wedding_recipe_path(@wedding, @recipe), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button role="button" href="">
        <i class="fas fa-trash"></i>
      </button>
    <% end %>
  </p>
<% end %>
