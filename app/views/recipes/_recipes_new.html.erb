<%= form_with scope: :recipe, url: wedding_recipes_path(@wedding), local: true do |form| %>
  <p>
    <%= form.label :recipe_name %></br>
    <%= form.text_field :recipe_name %>
  </p>

  <p>
    <%= form.label :recipe_quantity %></br>
    <%= form.text_field :recipe_quantity %>
  </p>

  <p>
    <%= form.label :notes %></br>
    <%= form.text_area :notes %>
  </p>

  <p>
    <%= form.submit %>
  </p>
<% end %>
