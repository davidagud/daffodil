<%= form_with scope: :wedding, url: weddings_path, local: true do |form| %>
  <p>
    <%= form.label :wedding_name %>
    <%= form.text_field :wedding_name, class: "text-field" %>
  </p>

  <p>
    <%= form.label :wedding_date %>
    <%= form.date_select(:wedding_date, :order => [:month, :day, :year]) %>
  </p>

  <p>
    <%= form.label :completed %>
    <%= form.check_box :completed %>
  </p>

  <p>
    <%= form.submit class: "btn btn-secondary" %>
  </p>
<% end %>
