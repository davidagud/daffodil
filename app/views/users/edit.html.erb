<%= form_for @user do |form| %>
  <p>
    <%= form.label :username %>
    <%= form.text_field :username %>
  </p>

  <p>
    <%= form.label :password %>
    <%= form.text_field :password %>
  </p>

  <p id="submit-button">
    <%= form.submit class: "btn btn-secondary btn-sm" %>
    <%= link_to user_path(@user), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button role="button" href="" class="btn btn-secondary btn-sm btn-icon">
        <i class="fas fa-trash"></i>
      </button>
    <% end %>
  </p>

<% end %>
