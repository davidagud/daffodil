<%= form_with scope: :hard_good, url: wedding_recipe_hard_good_path(@wedding, @recipe, @hard_good), local: true, method: :patch do |form| %>
  <p>
    <%= form.label :hard_good_name %>:
    <%= form.text_field :hard_good_name, class: "text-field", required: true %>
  </p>

  <p>
    <%= form.label :hard_good_price %>:
    <%= form.text_field :hard_good_price, class: "text-field", required: true %>
  </p>

  <p>
    <%= form.label :hard_good_quantity %>:
    <%= form.text_field :hard_good_quantity, class: "text-field", required: true %>
  </p>

  <p>
    <%= form.submit class: "btn btn-secondary btn-sm"%>
    <%= link_to wedding_recipe_hard_good_path(@wedding, @recipe, @hard_good), method: :delete, data: { confirm: 'Are you sure?' } do %>
      <button role="button" href="" class="btn btn-secondary btn-sm btn-icon">
        <i class="fas fa-trash"></i>
      </button>
    <% end %>
  </p>
<% end %>
